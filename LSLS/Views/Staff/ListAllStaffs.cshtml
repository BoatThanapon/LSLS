@model IEnumerable<LSLS.Models.Staff>

@{
    ViewBag.Title = "Company Staffs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Main", "Account")">Home</a></li>
    <li class="breadcrumb-item active">Company Staffs</li>
</ul>

<div class="container-fluid">

    <p>
        @Html.ActionLink("Add Staff", "FormCreateStaff", null, new {@class = "btn btn-success"})
    </p>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title">Company Staff</h5>
        </div>

        <div class="card-body">
            <table id="staffs" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>EmployeeID</th>
                    <th>Full name</th>
                    <th>Telephone number</th>
                    <th>Option</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StaffEmployeeId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StaffFullname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StaffTelephoneNo)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "DetailsStaff", new {staffId = item.StaffId}, new {@class = "btn btn-info btn-sm"})
                            @Html.ActionLink("Edit", "FormEditStaff", new {staffId = item.StaffId}, new {@class = "btn btn-warning btn-sm"})
                            @Html.ActionLink("Delete", "DeleteStaff", new {staffId = item.StaffId}, new {@class = "btn btn-danger btn-sm"})
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section scripts
{
    <script>
        $(document).ready(function() {
            $("#staffs").DataTable();
        });
    </script>
}