@model IEnumerable<LSLS.Models.Staff>

@{
    ViewBag.Title = "Company Staffs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ul class="breadcrumb">
    <li>@Html.ActionLink("Home", "Main", "Account")</li>
    <li class="active">Company Staffs</li>
</ul>

<div class="container body-content">

    <p>
        @Html.ActionLink("Add Staff", "FormCreateStaff", null, new {@class = "btn btn-success"})
    </p>

    <div class="panel panel-default">
        <div class="panel-heading">
            <h2 class="panel-title">
                <span class="glyphicon glyphicon-th-list"></span> Company Staff
            </h2>
        </div>
        <div class="panel-body">

            <table id="staffs" class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>EmployeeID</th>
                    <th>Full name</th>
                    <th>Telephone number</th>
                    <th>Option</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StaffEmployeeId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StaffFullname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StaffTelephoneNo)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "DetailsStaff", new {staffId = item.StaffId}, new {@class = "btn btn-primary btn-sm"})
                            @Html.ActionLink("Edit", "FormEditStaff", new {staffId = item.StaffId}, new {@class = "btn btn-warning btn-sm"})
                            @Html.ActionLink("Delete", "DeleteStaff", new {staffId = item.StaffId}, new {@class = "btn btn-danger btn-sm"})
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section scripts
{
    <script>
        $(document).ready(function() {
            $("#staffs").DataTable();
        });
    </script>
}