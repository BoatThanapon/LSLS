@model LSLS.Models.Staff

@{
    ViewBag.Title = "Delete Company Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Main", "Account")">Home</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("ListAllStaffs", "Staff")">Company Staffs</a></li>
    <li class="breadcrumb-item active">Delete Company Staff Profile</li>
</ul>

<div class="container">
    <div class="card border-danger">
        <div class="card-header text-white bg-danger">
            <h5 class="card-title">Do you want to delete this <strong>Company Staff ?</strong></h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <h5 class="card-title">Company Staff Account</h5>
                    <hr />

                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.StaffEmployeeId)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.StaffEmployeeId)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.StaffUsername)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.StaffUsername)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.StaffPassword)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.StaffPassword)
                        </dd>
                    </dl>

                </div>

                <div class="col">
                    <h5 class="card-title">Company Staff Information</h5>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.StaffFullname)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.StaffFullname)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.StaffGender)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.StaffGender)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.StaffCitizenId)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.StaffCitizenId)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.StaffBirthdate)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.StaffBirthdate)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.StaffAddress)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.StaffAddress)
                        </dd>


                        <dt>
                            @Html.DisplayNameFor(model => model.StaffEmail)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.StaffEmail)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.StaffTelephoneNo)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.StaffTelephoneNo)
                        </dd>

                    </dl>
                </div>
            </div>
            
            <hr/>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <div class="">
                        <input type="submit" value="Delete" class="btn btn-danger " onclick="return confirm('Do you want to delete ? ');"/>
                        @Html.ActionLink("Cancel", "ListAllStaffs", "Staff", new {@class = "btn btn-outline-secondary"})
                    </div>
                </div>
            }
        </div>
    </div>

</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

}