@model LSLS.Models.Staff

@{
    ViewBag.Title = "Company Staff Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Main", "Account")">Home</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("ListAllStaffs", "Staff")">Company Staffs</a></li>
    <li class="breadcrumb-item active">Company Staff Profile</li>
</ul>

<div class="container">
    <div class="card border-info">
        <div class="card-header text-white bg-info">
            Company Staff Profile
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <form>
                    <h5 class="card-title">Company Staff Account</h5>
                    <hr/>
                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffEmployeeId, new {@class = "col-md-5"})
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.StaffEmployeeId, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffUsername, new {@class = "col-md-5"})
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.StaffUsername, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffPassword, new {@class = "col-md-5"})
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.StaffPassword, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                        </div>
                    </div>

                    <br/>
                    <h5 class="card-title">Company Staff Information</h5>
                    <hr/>
                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffFullname, new {@class = "col-md-5"})
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.StaffFullname, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffGender, new {@class = "col-md-5"})
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.StaffGender, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffCitizenId, new {@class = "col-md-5"})
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.StaffCitizenId, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffBirthdate, new {@class = "col-md-5"})
                        <div class="col-md-7">
                            @Html.TextBoxFor(model => model.StaffBirthdate, new {@class = "form-control", type = "date", disabled = "disabled"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffAddress, new {@class = "col-md-5"})
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.StaffAddress, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffEmail, new {@class = "col-md-5"})
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.StaffEmail, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffTelephoneNo, new {@class = "col-md-5"})
                        <div class="col-md-7">
                            @Html.EditorFor(model => model.StaffTelephoneNo, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                        </div>
                    </div>
                    <hr/>

                    <div class="form-group">
                        <div class="col-md-7">
                            @Html.ActionLink("Update", "FormEditStaff", new {staffId = Model.StaffId}, new {@class = "btn btn-info"})
                            @Html.ActionLink("Cancel", "ListAllStaffs", "Staff", new { @class = "btn btn-outline-secondary" })                        
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>

</div>