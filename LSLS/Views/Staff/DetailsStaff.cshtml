@model LSLS.Models.Staff

@{
    ViewBag.Title = "Company Staff Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb">
    <li>@Html.ActionLink("Home", "Main", "Account")</li>
    <li>@Html.ActionLink("Company Staffs", "ListAllStaffs", "Staff")</li>
    <li class="active">Company Staff Profile</li>
</ul>

<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <span class="glyphicon glyphicon-th"></span> Company Staff Profile
        </div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <div class="panel-title">Company Staff Account</div>
                    <hr/>
                    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffEmployeeId, new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.StaffEmployeeId, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffUsername, new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.StaffUsername, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffPassword, new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.StaffPassword, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                        </div>
                    </div>

                    <br/>
                    <div class="panel-title">Company Staff Information</div>
                    <hr/>
                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffFullname, new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.StaffFullname, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffGender, new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.StaffGender, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffCitizenId, new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.StaffCitizenId, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffBirthdate, new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.StaffBirthdate, new {@class = "form-control", type = "date", disabled = "disabled"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffAddress, new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.StaffAddress, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffEmail, new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.StaffEmail, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StaffTelephoneNo, new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.StaffTelephoneNo, new {htmlAttributes = new {@class = "form-control", disabled = "disabled"}})
                        </div>
                    </div>
                    <hr/>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            @Html.ActionLink("Update", "FormEditStaff", new {staffId = Model.StaffId}, new {@class = "btn btn-primary"})
                            @Html.ActionLink("Cancel", "ListAllStaffs", "Staff", new {@class = "btn btn-default"})
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>