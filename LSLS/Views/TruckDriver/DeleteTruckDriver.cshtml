@model LSLS.Models.TruckDriver

@{
    ViewBag.Title = "Delete Truck's Driver";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Main", "Account")">Home</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("ListAllTruckDrivers", "TruckDriver")">Truck's Driver</a></li>
    <li class="breadcrumb-item active">Delete Truck's Driver Profile</li>
</ul>

<div class="container">
    <div class="card border-danger">
        <div class="card-header text-white bg-danger">
            <h5 class="card-title">Do you want to delete this <strong>Truck's Driver ?</strong></h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <h5 class="card-title">Truck's Driver Account</h5>
                    <hr />

                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.TruckDriverUsername)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TruckDriverUsername)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TruckDriverPassword)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TruckDriverPassword)
                        </dd>
                    </dl>
                    
                    <br />
                    <h5 class="card-title">Truck Information</h5>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.TruckId)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TruckId)
                        </dd>
                    </dl>
                </div>

                <div class="col">
                    <h5 class="card-title">Truck's Driver Information</h5>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.TruckDriverFullname)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TruckDriverFullname)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TruckDriverGender)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TruckDriverGender)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TruckDriverCitizenId)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TruckDriverCitizenId)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TruckDriverDriverLicenseId)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TruckDriverDriverLicenseId)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TruckDriverBirthdate)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TruckDriverBirthdate)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TruckDriverAddress)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TruckDriverAddress)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TruckDriverEmail)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TruckDriverEmail)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.TruckDriverTelephoneNo)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TruckDriverTelephoneNo)
                        </dd>

                    </dl>
                </div>
            </div>

            <hr />

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <div class="">
                        <input type="submit" value="Delete" class="btn btn-danger " onclick="return confirm('Do you want to delete ? ');" />
                        @Html.ActionLink("Cancel", "ListAllTruckDrivers", "TruckDriver", new { @class = "btn btn-outline-secondary" })
                    </div>
                </div>
            }
        </div>
    </div>

</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

}
