@model IEnumerable<LSLS.Models.TruckDriverDocument>
@{
    ViewBag.Title = "ListAllTruckDriverDoc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Main", "Account")">Home</a></li>
    <li class="breadcrumb-item active">Truck's Driver Document</li>
</ul>

<div class="container-fluid">

    <div class="card">

        <div class="card-header">
            <h5 class="card-title">Truck's Driver Document</h5>
        </div>

        <div class="card-body">

            <table id="truckdriverDoc" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Truck ID</th>
                        <th>Tel.</th>
                        <th>Manage Files</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TruckDriver.TruckDriverFullname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TruckDriver.TruckId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TruckDriver.TruckDriverTelephoneNo)
                            </td>
                            <td>
                                @Html.ActionLink("Manage Files", "ListFilesByTruckDriverDocId","TruckDriverDoc", new { truckDriverDocId = item.TruckDriverDocId }, new { @class = "btn btn-outline-primary btn-block" })
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


</div>


@section scripts
{
    <script>
        $(document).ready(function () {
            $("#truckdriverDoc").DataTable();
        });
    </script>
}

