@model LSLS.Models.TransportationInf

@{
    ViewBag.Title = "FormCreateTransportationInf";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Main", "Account")">Home</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("ListAllTransportationInfs", "TransportationInf")">Transportation Informations</a></li>
    <li class="breadcrumb-item active">Create New Shipping</li>
</ul>

<div class="container">
    <div class="card border-success">
        <div class="card-header text-white bg-success">
            <h5 class="card-title">Create New Shipping</h5> 
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <form>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Employer, new { @class = "col-5" })
                        <div class="col-7">
                            @Html.EditorFor(model => model.Employer, new { htmlAttributes = new { @class = "form-control", placeholder = "Employer" } })
                            @Html.ValidationMessageFor(model => model.Employer, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.OrderDate, new { @class = "col-5" })
                        <div class="col-7">
                            @Html.EditorFor(model => model.OrderDate, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.OrderDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DateOfTransportation, new { @class = "col-5" })
                        <div class="col-7">
                            @Html.EditorFor(model => model.DateOfTransportation, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DateOfTransportation, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ProductName, new { @class = "col-5" })
                        <div class="col-7">
                            @Html.EditorFor(model => model.ProductName, new { htmlAttributes = new { @class = "form-control", placeholder = "Product Name" } })
                            @Html.ValidationMessageFor(model => model.ProductName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StartingPoint, new { @class = "col-5" })
                        <div class="col-7">
                            @Html.EditorFor(model => model.StartingPoint, new { htmlAttributes = new { @class = "form-control", placeholder = "Starting Point" } })
                            @Html.ValidationMessageFor(model => model.StartingPoint, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Destination, new { @class = "col-5" })
                        <div class="col-7">
                            @Html.EditorFor(model => model.Destination, new { htmlAttributes = new { @class = "form-control", placeholder = "Destination" } })
                            @Html.ValidationMessageFor(model => model.Destination, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ReceiverName, new { @class = "col-5" })
                        <div class="col-7">
                            @Html.EditorFor(model => model.ReceiverName, new { htmlAttributes = new { @class = "form-control", placeholder = "RecieverName" } })
                            @Html.ValidationMessageFor(model => model.ReceiverName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <hr />
                    <div class="form-group">
                        <div class="col-7">
                            <input type="submit" value="Create" class="btn btn-success" />
                            @Html.ActionLink("Cancel", "ListAllTransportationInfs","", new { @class = "btn btn-outline-secondary" })
                        </div>

                    </div>

                </form>
            }
        </div>

    </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

