@model IEnumerable<LSLS.Models.TransportationInf>

@{
    ViewBag.Title = "ListAllTrans";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Main", "Account")">Home</a></li>
    <li class="breadcrumb-item active">Transportation Informations</li>
</ul>

<div class="container-fluid">
    <p>
        @Html.ActionLink("Add Shipping", "FormCreateTransportationInf", null, new { @class = "btn btn-success" })
    </p>

    <div class="card">
        <div class="card-header">
            <h5 class="card-title">
                Transportation Informations
            </h5>
        </div>
        <div class="card-body">

            <table id="shippings" class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>
                        ShippingNo.
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Employer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th>
                        Status Shipping
                    </th>
                    <th>
                        Job Assign
                    </th>
                    <th>
                        Options
                    </th>

                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ShippingId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employer)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            <td>
                                @(item.StatusOfTransportation.Equals(true) ?
                                      Html.Label("Complete", new { @class = "badge badge-success" }) :
                                      Html.Label("Not Complete", new { @class = "badge badge-danger" }))
                            </td>
                            <td>
                                @(item.JobIsActive.Equals(true) ?
                                      Html.Label("Active", new { @class = "badge badge-success" }) :
                                      Html.ActionLink("Add Job", "FormCreateJobAssignment", new { shippingId = item.ShippingId }, new { @class = "btn btn-primary btn-sm" }))
                            </td>
                            <td>
                                @Html.ActionLink("Details", "DetailsTransportationInf", new { shippingId = item.ShippingId }, new { @class = "btn btn-info btn-sm" })
                                @Html.ActionLink("Edit", "FormEditTransportationInf", new { shippingId = item.ShippingId }, new { @class = "btn btn-warning btn-sm" })
                                @Html.ActionLink("Delete", "DeleteTransportationInf", new { shippingId = item.ShippingId }, new { @class = "btn btn-danger btn-sm" })
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


@section scripts
{
    <script>
        $(document).ready(function () {
            $("#shippings").DataTable();
        });
    </script>
}